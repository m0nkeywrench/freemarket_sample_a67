= render 'homes/headerMain'
.mainbox
  .mypage
    = render "users/mypage_sidebar"

    .mypage__main
      .mypage__main__top
        .editProfile
          = form_for(@user, url: update_profile_user_path) do |f|
            .editProfile__title
              プロフィール
            .editProfile__main
              .editProfile__main__imgbox
                .editProfile__main__imgbox--img
                  =f.label :profile_image do
                    - if @user.profile_image.present?
                      = image_tag @user.profile_image.url, class: 'profile_image', size: "100x100"
                    - else
                      = image_tag ('material/icon/mypage_sample.png'), class: 'profile_image', size: "100x100"
                    = f.file_field :profile_image, class: 'hidden'
              .editProfile__main__nickname
                = f.text_field :nickname

            .editProfile__message
              .editProfile__message__title
                = f.label :profile, "プロフィール"
              .editProfile__message__sentence
                = f.text_area :profile, size: "70x10", placeholder: '例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪'

            .editProfile__update
              .editProfile__update--button
                = f.submit "更新"

= render 'homes/footerMain'